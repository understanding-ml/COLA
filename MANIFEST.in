# Include the README file
include README.rst
include LICENSE
include CHANGELOG.md

# Include requirements file
include requirements.txt

# Include example notebooks
recursive-include demo.ipynb
recursive-include train_ml_model.ipynb

# Include data files
recursive-include datasets/rawdata *.csv
